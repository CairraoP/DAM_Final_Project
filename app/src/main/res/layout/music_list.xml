<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:id="@+id/music_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MusicActivity">

    <!-- Container for the Top Section (Image + potential text) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/fotoAlbum"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/imagem_ablum_guide"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/title_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_name_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- NEW: Horizontal layout to align buttons side-by-side -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/edit_album"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/edit_icon"
                    app:iconTint="@android:color/white"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp"
                    android:onClick="editAlbumInActivity"/>

                <Button
                    android:id="@+id/delete_album"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:iconTint="@android:color/white"
                    app:icon="@drawable/trash_icon"
                    app:backgroundTint="@android:color/holo_red_dark"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView below -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/music_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
</layout>