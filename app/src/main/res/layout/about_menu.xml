<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Informações do Curso -->
        <TextView
            android:id="@+id/tv_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curso: Engenharia Informática"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_disciplina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disciplina: Desenvolvimento de Aplicações Móveis"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_ano_letivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ano Letivo: 2025/2026"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="24dp" />

        <!-- Autor 1 -->
        <ImageView
            android:id="@+id/img_autor1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/foto_pedro"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/n_25942_pedro_daniel_cairr_o_da_silva"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Bibliotecas e Frameworks -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bibliotecas_e_frameworks_usadas"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_libraries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:text="@string/frameworks"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>